# Server Configuration
PORT=8080
GIN_MODE=release
API_VERSION=v1

# Database
DB_HOST=localhost
DB_PORT=5432
DB_USER=fariima
DB_PASSWORD=your_secure_password
DB_NAME=fariima_db
DB_SSLMODE=disable

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Blockchain
POLYGON_RPC_URL=https://polygon-rpc.com
POLYGON_MUMBAI_RPC_URL=https://rpc-mumbai.maticvigil.com
CHAIN_ID=137
TESTNET_CHAIN_ID=80001
NETWORK=mainnet

# Contract Addresses (update after deployment)
ESCROW_CONTRACT=0x0000000000000000000000000000000000000000
FARI_TOKEN_CONTRACT=0x0000000000000000000000000000000000000000
DAO_CONTRACT=0x0000000000000000000000000000000000000000
NFT_CONTRACT=0x0000000000000000000000000000000000000000

# IPFS
IPFS_API_URL=https://api.pinata.cloud
IPFS_GATEWAY_URL=https://gateway.pinata.cloud/ipfs/
PINATA_API_KEY=your_pinata_api_key
PINATA_SECRET_KEY=your_pinata_secret_key

# JWT
JWT_SECRET=your_jwt_secret_key_change_this_in_production
JWT_EXPIRATION_HOURS=168

# Indexer
INDEXER_START_BLOCK=0
INDEXER_BATCH_SIZE=1000
INDEXER_INTERVAL_SECONDS=10

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW_SECONDS=60

# CORS
CORS_ALLOWED_ORIGINS=http://localhost:3000,https://fariima.io
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Content-Type,Authorization

# Logging
LOG_LEVEL=info
LOG_FORMAT=json
